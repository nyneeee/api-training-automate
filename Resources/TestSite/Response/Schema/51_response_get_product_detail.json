{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "statusCode": {
      "type": "string"
    },
    "statusDesc": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "brand": {
      "type": "string"
    },
    "model": {
      "type": "string"
    },
    "productType": {
      "type": "string"
    },
    "productSubtype": {
      "type": ["string", "null"]
    },
    "dv": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "point": {
            "type": "string"
          }
        },
        "required": [
          "name",
          "point"
        ]
      }
    },
    "products": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "colorName": {
            "type": "string"
          },
          "colorCode": {
            "type": "string"
          },
          "productInfo": {
            "type": "array",
            "minItems": 1,
            "items": 
              {
                "type": "object",
                "properties": {
                  "materialCode": {
                    "type": "string"
                  },
                  "materialType": {
                    "type": "string"
                  }
                },
                "required": [
                  "materialCode",
                  "materialType"
                ]
              }
          },
          "sku": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "images": {
            "type": "object",
            "properties": {
              "thumbnail": {
                "type": ["string", "null"]
              },
              "baseView": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "imageUrl": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        },
        "required": [
          "sku",
          "productInfo"
        ]
      }
    }
  },
  "required": [
    "statusCode",
    "statusDesc",
    "name",
    "brand",
    "model",
    "productType",
    "products"
  ]
}
