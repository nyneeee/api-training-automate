{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "statusCode": {
      "type": "string"
    },
    "statusDesc": {
      "type": "string"
    },
    "campaigns": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "code": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "point": {
            "type": "string"
          },
          "images": {
            "type": "array",
            "items": 
              {
                "type": "object",
                "properties": {
                  "imageType": {
                    "type": "string"
                  },
                  "imageUrl": {
                    "type": "string"
                  }
                },
                "required": [
                  "imageType",
                  "imageUrl"
                ]
              }
          },
          "detail": {
            "type": "string"
          },
          "priority": {
            "type": "string"
          },
          "hit": {
            "type": "string",
            "enum": ["Y" , "N"]
          },
          "recommend": {
            "type": "string",
            "enum": ["Y" , "N"]
          },
          "action": {
            "type": "object",
            "properties": {
              "api": {
                "type": "string"
              },
              "parameters": {
                "type": "array",
                "items": 
                  {
                    "type": "object",
                    "properties": {
                      "name": {
                        "type": "string"
                      }
                    },
                    "required": [
                      "name",
                      "value"
                    ]
                  }
              }
            }
          }
        },
        "required": [
          "code",
          "name",
          "detail",
          "priority",
          "action"
        ]
      }
    }
  },
  "required": [
    "statusCode",
    "statusDesc"
  ]
}