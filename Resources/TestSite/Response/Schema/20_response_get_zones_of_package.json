{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "statusCode": {
      "type": "string"
    },
    "statusDesc": {
      "type": "string"
    },
    "data": {
      "type": "array",
      "items": 
        {
          "type": "object",
          "properties": {
            "zoneName": {
              "type": ["string","null"]
            },
            "description":{
              "type":["string","null"]
            },
            "status": {
              "type": "string"
            },
            "rowId": {
              "type": "string"
            },
            "countries": {
              "type": "array",
              "items": 
                {
                  "type": "object",
                  "properties": {
                    "countryName": {
                      "type": ["string","null"]
                    },
                    "continent":{
                      "type": ["string","null"]
                    },
                    "status": {
                      "type": "string"
                    },
                    "rowId": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "status",
                    "rowId"
                  ]
                }
            }
          },
          "required": [
            "status",
            "rowId",
            "countries"
          ]
        }
    }
  },
  "required": [
    "statusCode",
    "statusDesc",
    "data"
  ]
}