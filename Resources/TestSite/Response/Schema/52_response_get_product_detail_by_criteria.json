{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "statusCode": {
      "type": "string"
    },
    "statusDesc": {
      "type": "string"
    },
    "product": {
      "type": "object",
      "properties": {
        "brand": {
          "type": "string"
        },
        "commercialName": {
          "type": "string"
        },
        "model": {
          "type": "string"
        },
        "productType": {
          "type": "string"
        },
        "productSubType": {
          "type": "string"
        },
        "colors": {
          "type": "array",
          "items": 
            {
              "type": "object",
              "properties": {
                "colorName": {
                  "type": "string"
                },
                "colorCode": {
                  "type": ["string","null"]
                },
                "normalPrice": {
                  "type": "number"
                },
                "matCodes": {
                  "type": "array",
                  "items": 
                    {
                      "type": "object"
                    }
                },
                "thumbnail": {
                  "type": ["string","null"]
                },
                "images": {
                  "type": "array",
                  "items": 
                    {
                      "type": "object",
                      "properties": {
                        "imageUrl": {
                          "type": "string"
                        }
                      }
                    }
                }
              },
              "required": [
                "colorName",
                "normalPrice",
                "matCodes"
              ]
            }
        }
      },
      "required": [
        "brand",
        "commercialName",
        "model",
        "productType",
        "colors"
      ]
    }
  },
  "required": [
    "statusCode",
    "statusDesc",
    "product"
  ]
}