pipeline {
    agent any
    parameters {
        string(name: 'ARTIFACTS', defaultValue: '', description: 'Artifacts to retrieve') // เพิ่ม parameter สำหรับ ARTIFACTS
    }
    environment {
        PATH = "/opt/homebrew/bin:${env.PATH}"
    }
    stages {
        stage('Receive Artifacts') {
            steps {
                // รับ artifacts
                copyArtifacts projectName: 'previous-job-name', filter: "${params.ARTIFACTS}"

                // เช็คไฟล์ใน directory
                sh 'ls -lrt' // แสดงไฟล์ทั้งหมดใน directory
            }
        }
    }
}
